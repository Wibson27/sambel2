<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<VBox onMouseClicked="#onCardClicked" spacing="10" styleClass="explore-project-card" stylesheets="@../ExploreProjectCard.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sambel.ExploreProjectCardController">
   <Pane style="-fx-border-color: #ffffff;">
      <children>
          <ImageView fx:id="projectImage" fitHeight="200" fitWidth="300" preserveRatio="true" styleClass="project-image" />
      </children>
   </Pane>
    <Label fx:id="titleLabel" styleClass="project-title" />
    <ProgressBar fx:id="fundingProgress" prefWidth="280" />
    <Label fx:id="fundingLabel" styleClass="project-funding" />
</VBox>
